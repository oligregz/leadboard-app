{
  // Visual Studio Code
  "editor.tabSize": 2,

  // TypeScript Import Sorter
  "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.sortConfiguration.removeUnusedImports": true,
  "importSorter.sortConfiguration.removeUnusedDefaultImports": true,
  "importSorter.importStringConfiguration.tabSize": 2,
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.count": 140,
  "importSorter.importStringConfiguration.trailingComma": "multiLine",
  "importSorter.sortConfiguration.customOrderingRules.defaultOrderLevel": 50,
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.type": "newLineEachExpressionAfterCountLimit",
  "importSorter.importStringConfiguration.numberOfEmptyLinesAfterAllImports": 2,
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    {
      "regex": "^@angular",
      "orderLevel": 10
    },
    {
      "regex": "^(rxjs|[@]?ng|@agm|angulartics|big\\.js|uuid)",
      "orderLevel": 20
    },
    {
      "regex": "^@",
      "orderLevel": 40
    },
    {
      "regex": "^\\.",
      "orderLevel": 60
    }
  ],
  "peacock.color": "#37a6c4",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#5db9d1",
    "activityBar.background": "#5db9d1",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#c738a9",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#5db9d1",
    "statusBar.background": "#37a6c4",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#2c849c",
    "statusBarItem.remoteBackground": "#37a6c4",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#37a6c4",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#37a6c499",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.darkForegroundColor": "#15202b"
}
